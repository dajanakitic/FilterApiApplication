@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Filter API</h1>
</div>

<form asp-action="Filter" method="get">
    <div class="form-group">
        <label for="maxPriceId">Max price</label>
        <input type="number" class="form-control" id="maxPrice" name="maxPrice" aria-describedby="maxPrice" placeholder="Enter max price criteria">
    </div>
    <div class="form-group">
        <label for="sizeId">Size</label>
        <input type="text" class="form-control" id="size" name="size" aria-describedby="size" placeholder="Enter size criteria">
    </div>
    <div class="form-group">
        <label for="highlightId">Highlight words</label>
        <input type="text" class="form-control" id="highlight" name="highlight" aria-describedby="highlight" placeholder="Enter highlight criteria">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
